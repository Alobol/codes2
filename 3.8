#include <iostream>

int main() {
    int choice;

    cout << "Выберите фигуру для вычисления площади:n";
    cout << "1 - Кругn";
    cout << "2 - Квадратn";
    cout << "3 - Треугольникn";
    cout << "Введите номер фигуры: ";
    cin >> choice;

    switch (choice) {
        case 1:
            cout << "Формула для вычисления площади круга: S = π * r^2n";
            break;
        case 2:
            cout << "Формула для вычисления площади квадрата: S = a^2n";
            break;
        case 3:
            cout << "Формула для вычисления площади треугольника: S = (a * h) / 2n";
            break;
        default:
            cout << "Ошибка: Неверный номер фигуры.n";
            break;
    }

    return 0;
}
